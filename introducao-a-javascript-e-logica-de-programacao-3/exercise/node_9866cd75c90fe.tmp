//4- Depois, faça uma pirâmide com n asteriscos de base:

let n = 5
let form = [];
let media = n/2;

for(let k = 1; k <= n; k += 1) {
    for(let index = 0; index < n; index +=1) {
        if (index = Math.ceil(media)) {
            form += '*';
        } else {
            form += ' ';
        }
    }
    console.log(form);
    form = [];
}
