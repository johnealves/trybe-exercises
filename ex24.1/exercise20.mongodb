//Exercício 20 : Em apenas uma query, adicione o campo areas com ["Outside"] a todos os Junior Staff que não tenham o campo areas definido.

use('class');
db.xmen.updateMany(
  {
    $and: [
      { occupation: 'Junior Staff' }, { areas: { $exists: 0 } }
    ]
  },
  {
    $currentDate: { lastUpdate: { $type: 'date' } },
    $set: { areas: [ 'Outside' ] },
  }
);
